

<h1>Patients</h1>
<br/>
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr class="text-center align-middle">
      <th>Nome</th>
      <th>Data de Nascimento</th>
      <th>Data Atendimento</th>
      <th>Local Atendimento</th>
      <th>Caso Clinico</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <% if patient.user == current_user %>
        <tr class="text-center align-middle">
          <td>
            <%= link_to patient.first_name + " " + patient.last_name, patient %>         
            </td>
          <td><%= patient.birth_date %></td>
          <td><%= patient.attendance_date %></td>
          <td><%= patient.place %></td>
          <td><%= patient.clinical_case %></td>
          <td><%= link_to 'Edit', edit_patient_path(patient), class:"btn btn-outline-primary center" %></td>
          <td ><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Patient', new_patient_path, class:"btn btn-secondary" %>
