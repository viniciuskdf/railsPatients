<br/>
  <div class="field form  col-md-12">
    <% form.label :height %>
    <%= form.text_field :height, class: "form-control", placeholder:"Altura" %>
  </div>

<br/>

  <div class="field form">
    <% form.label :place %>
    <%= form.text_field :place, class: "form-control", placeholder:"Local" %>
  </div>
