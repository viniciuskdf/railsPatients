
<%
def age(dob)
  now = Time.now.utc.to_date
  now.year - dob.year - ((now.month > dob.month || (now.month == dob.month && now.day >= dob.day)) ? 0 : 1)
end
%>

<div class="jumbotron">
  <h1 class="display-4"><%= @patient.first_name %> <%= @patient.last_name %>, <%= age(@patient.birth_date) %> anos</h1>
  <p class="my-4">
 <hr class="my-4">
    <p>
      <strong>Data de Nascimento:</strong>
      <%= @patient.birth_date %> 
        </p>
      <strong>Massa:</strong>
      <%= @patient.mass %> Kg
         </p>
      <strong>Altura:</strong>
      <%= @patient.height %> M
      
    </p>

    <p>
      <strong>Data de Atendimento:</strong>
      <%= @patient.attendance_date %>
         </p>
      <strong>Local:</strong>
      <%= @patient.place %>
    </p>

    <p>
      <strong>Caso Clinico:</strong>
      <%= @patient.clinical_case %>
    </p>

    <p>
      <strong>Medicação Atual:</strong>
      <%= @patient.current_medication %>
         </p>
      <strong>Medicação Prescrita:</strong>
      <%= @patient.prescribed_medication %>


    </p>
  </p>
  <br/>
  <p class="lead">
    <%= link_to 'Edit', edit_patient_path(@patient), class:"btn btn-secondary" %>
    <%= link_to 'Back', patients_path , class:"btn btn-secondary" %>

  </p>
</div>

