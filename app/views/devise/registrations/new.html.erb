<h2>Registre-se</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group col-md-3">
    <% f.label :email %><br />
    <%= f.email_field :email, class:"form-control", placeholder:"Email", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field form-group col-md-3">
    <% f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres m√≠nimos)</em>
    <% end %><br />
    <%= f.password_field :password, class:"form-control", placeholder:"Senha", autocomplete: "new-password" %>
  </div>

  <div class="field form-group col-md-3">
    <% f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Confirme a Senha", autocomplete: "new-password" %>
  </div>
<br/>
  <div class="actions">
    <%= f.submit "Sign up" , class:"btn btn-primary" %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
<br/>

