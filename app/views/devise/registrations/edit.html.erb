<h2>Editar Perfil <% resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group col-md-3">
    <% f.label :email %><br />
    <%= f.email_field :email, class:"form-control", placeholder:"Email", autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Esperando a confirmação de: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-group col-md-3">
    <% f.label :password %> <i>(Deixe em branco se não quiser alterar)</i><br />
    <%= f.password_field :password, class:"form-control", placeholder:"Senha", autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> caracteres mínimos</em>
    <% end %>
  </div>

  <div class="field form-group col-md-3">
    <% f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Confirme a Senha", autocomplete: "new-password" %>
  </div>

  <div class="field form-group col-md-3">
    <% f.label :current_password %> <i></i><br />
    <%= f.password_field :current_password, class:"form-control", placeholder:"Senha Atual", autocomplete: "current-password" %>
  </div>
<br/>
  <div class="actions">
    <%= f.submit "Update" , class:"btn btn-primary" %>
  </div>
<% end %>
<br/><br/>
<h3>Cancelar minha conta</h3>

<p>Teve uma má experiência? <%= button_to "Cancelar conta", registration_path(resource_name), data: { confirm: "Certeza?" }, method: :delete , class:"btn btn-danger" %></p>

<%= link_to 'Back', :back , class:"btn btn-secondary" %>
